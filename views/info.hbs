<div class="md:flex hidden rounded-2xl relative w-[70vw] ps-4 py-4 bg-white flex-row  shadow-lg">
    <div>
        <img src="/images/images/bg-sidebar-desktop.svg" alt="">
    </div>
    <div class="flex flex-col absolute">
        <div class="flex flex-row ms-8 mt-10 items-center">
            <div class="bg-[#BEE1FD] p-2 flex items-center justify-center rounded-full text-sm h-8 w-8"><p>1</p></div>
            <div class="flex flex-col ms-5 text-white">
                <p class="text-xs">STEP 1</p>
                <h1 class="font-bold text-md">YOUR INFO</h1>
            </div>
        </div>
        <div class="flex flex-row ms-8 mt-7 items-center">
            <div class="border border-white text-white  p-2 flex items-center justify-center rounded-full font-bold text-sm h-8 w-8"><p>2</p></div>
            <div class="flex flex-col ms-5 text-white">
                <p class="text-xs">STEP 2</p>
                <h1 class="font-bold text-md">SELECT PLAN</h1>
            </div>
        </div>
        <div class="flex flex-row ms-8 mt-7 items-center">
            <div class="border border-white text-white  p-2 flex items-center justify-center rounded-full font-bold text-sm h-8 w-8"><p>3</p></div>
            <div class="flex flex-col ms-5 text-white">
                <p class="text-xs">STEP 3</p>
                <h1 class="font-bold text-md">ADD-ONS</h1>
            </div>
        </div>
        <div class="flex flex-row ms-8 mt-7 items-center">
            <div class="border border-white text-white  p-2 flex items-center justify-center rounded-full font-bold text-sm h-8 w-8"><p>4</p></div>
            <div class="flex flex-col ms-5 text-white">
                <p class="text-xs">STEP 4</p>
                <h1 class="font-bold text-md">SUMMARY</h1>
            </div>
        </div>
    </div>
    <div class="ms-24 mt-12 w-[33vw]">
        <h1 class="text-3xl font-bold text-[#052756]">Personal Info</h1>
        <p class="mt-3 text-[#B9BABE] font-normal">Please provide your name, email address, and phone number.</p>

        <form action="/" method="POST" class="flex flex-col mt-10">
            <label for="name" class="text-[#293C53] flex justify-between text-sm font-semibold">Name <span class="text-xs text-red-500 font-normal">{{nameErr}}</span></label>
            <input value="{{name}}" placeholder="e.g. Steven King" type="text" name="name" id="nameDesktop" class="mt-2 text-[#293C53] focus:border-[#6661A1] px-4 h-12 rounded-md border outline-none border-[#D9D8DD]">
            <label for="email" class=" text-[#293C53] mt-7 flex justify-between text-sm font-semibold">Email Address <span class="text-xs text-red-500 font-normal">{{emailErr}}</span></label>
            <input value="{{email}}" placeholder="e.g. stevenking@lorem.com" type="text" name="email" id="emailDesktop" class="mt-2 text-[#293C53] focus:border-[#6661A1] px-4 h-12 rounded-md outline-none border border-[#D9D8DD]">
            <label for="number" class="text-[#293C53] mt-7 flex justify-between text-sm font-semibold">Phone Number <span id="numberErrDesktop" class="text-xs font-normal text-red-500">{{numberErr}}</span></label>
            <input value="{{number}}" placeholder="e.g. +1 234 567 890" type="text" name="number" id="numberDesktop" class="mt-2 text-[#293C53] focus:border-[#6661A1] px-4 h-12 rounded-md outline-none border border-[#D9D8DD]">
            <div class="justify-end flex flex-row">
                <button id="postBtnDesktop" type="submit" class="mt-20 hover:cursor-pointer text-sm bg-[#03295A] text-white font-semibold px-6 rounded-md items-center py-3 hover:bg-[#154B89]">Next Step</button>
            </div>
        </form>

    </div>

</div>

<div class="md:hidden">
    <div class="relative w-full">
        <img class="w-full lg" src="/images/images/bg-sidebar-mobile.svg" alt="">
        <div class="absolute top-[30%] w-full flex flex-row items-center gap-4 justify-center">
            <div class="bg-[#BEE1FD] p-2 flex items-center justify-center rounded-full text-sm h-8 w-8"><p>1</p></div>
            <div class="border-white text-white border font-bold p-2 flex items-center justify-center rounded-full text-sm h-8 w-8"><p>2</p></div>
            <div class="border-white text-white border font-bold p-2 flex items-center justify-center rounded-full text-sm h-8 w-8"><p>3</p></div>
            <div class="border-white text-white border font-bold p-2 flex items-center justify-center rounded-full text-sm h-8 w-8"><p>4</p></div>
        </div>

        <div id="mobileform" class="px-6 pt-6 absolute left-1/2 -translate-x-1/2 top-[14vh] rounded-lg w-[90vw] pb-8 item-center flex flex-col bg-white">
            <h1 class="font-bold text-2xl text-[#052756]">Personal Info</h1>
            <p class="text-md mt-3 text-[#B9BABE]">Please provide your name, email address and phone number.</p>

            <form action="/" method="POST" class="flex flex-col mt-6">
                <label for="name" class="text-[#293C53] flex justify-between text-sm font-semibold">Name <span class="text-xs font-normal text-red-500">{{nameErr}}</span></label>
                <input value="{{name}}" placeholder="e.g. Steven King" type="text" name="name" id="name" class="mt-2 text-[#293C53] focus:border-[#6661A1] px-4 h-12 rounded-md border outline-none border-[#D9D8DD]">
                <label for="email" class=" text-[#293C53] mt-7 flex justify-between text-sm font-semibold">Email Address <span class="text-xs font-normal text-red-500">{{emailErr}}</span></label>
                <input value="{{email}}" placeholder="e.g. stevenking@lorem.com" type="text" name="email" id="email" class="mt-2 text-[#293C53] focus:border-[#6661A1] px-4 h-12 rounded-md outline-none border border-[#D9D8DD]">
                <label for="number" class="text-[#293C53] mt-7 flex justify-between text-sm font-semibold">Phone Number <span class="text-xs font-normal text-red-500">{{numberErr}}</span></label>
                <input value="{{number}}" placeholder="e.g. +1 234 567 890" type="text" name="number" id="number" class="mt-2 text-[#293C53] focus:border-[#6661A1] px-4 h-12 rounded-md outline-none border border-[#D9D8DD]">

                <div class="bg-white w-full flex flex-row pt-7 py-4 bottom-0 left-0">
                    <button id="postBtn" type="submit" class="ms-auto me-4 text-sm bg-[#03295A] text-white font-semibold px-6 rounded-md items-center py-3 hover:bg-[#154B89]">Next Step</button>
                </div>
            </form>
        </div>

    </div>
</div>